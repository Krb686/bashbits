[[ -f ~/bash_functions.sh ]] && . ~/bash_functions.sh || { printf "%s\n" "Could not source ~/bash_functions.sh"; return 0; }

alias c='clear'
alias la='list_aliases'
alias rb='. ~/.bashrc'

function list_aliases {
    printf "%s\n" "Aliases defined in: ~/.bashrc+"
    printf "\n"
    printf "%s\n" "--------"
    printf "\n"
    printf "%s\n" "c		clear"
    printf "%s\n" "la		list_aliases"
    printf "%s\n" "rb		. ~/.bashrc"
}

function replace_spaces {
    local dir="${1:?'Usage: replace_spaces <dir>'}"
    local fC=0
    for file in "$1"/*; do
        local new="$(echo $file | tr ' ' '_')"
        [[ "$new" == "$file" ]] && { :; } ||  { mv "$file" "$new"; fC=$(($fC+1)); }
    done
    printf "%s\n" "Renamed $fC files!"
}


